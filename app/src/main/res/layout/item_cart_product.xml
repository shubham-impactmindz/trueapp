<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginBottom="5sp"
    android:layout_marginTop="5sp"
    android:padding="5sp"
    android:background="@drawable/border_primary"
    android:gravity="center_vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageProduct"
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_lays"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="Cheetos Crunchy Flamin' Hot 8oz (226g) Flav"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="start"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">



                            <TextView
                                android:id="@+id/finalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center_vertical"
                                android:text="@string/wallet_balance"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/comparePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginStart="10sp"
                                android:text="Â£3.50"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/textGrey" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llCartSign"
                            android:layout_width="0dp"
                            android:layout_height="30sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_solid_grey">


                                <ImageView
                                    android:id="@+id/btnMinus"
                                    android:layout_width="30sp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_minus"
                                    app:tint="@color/colorPrimaryDark"
                                    android:padding="8sp">
                                </ImageView>

                                <TextView
                                    android:id="@+id/textNoOfItems"
                                    android:layout_width="50sp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:fontFamily="@font/roboto_bold">
                                </TextView>

                                <ImageView
                                    android:id="@+id/btnAddMore"
                                    android:layout_width="30sp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_add"
                                    app:tint="@color/colorPrimaryDark"
                                    android:padding="8sp">
                                </ImageView>


                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linearDelete"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:gravity="end"
                            android:layout_marginStart="20sp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btnDelete"
                                android:layout_width="25sp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_delete"
                                app:tint="@color/colorSecondary"
                                android:layout_marginStart="20sp"
                                android:padding="4sp"/>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearFavourite"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/btnFavoriteSelected"
                    android:layout_width="25sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_favourite"
                    app:tint="@color/colorPrimaryDark"
                    android:background="@drawable/circle_background"
                    android:padding="5sp"/>

                <ImageView
                    android:id="@+id/btnFavorite"
                    android:layout_width="25sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_favourite_unselected"
                    app:tint="@color/colorPrimaryDark"
                    android:background="@drawable/circle_background"
                    android:padding="5sp"/>

            </LinearLayout>
        </FrameLayout>




    </LinearLayout>

</LinearLayout>
