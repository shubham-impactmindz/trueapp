<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".ui.component.main.account.EditAddressActivity">

    <!-- Header Layout: This layout remains fixed at the top. -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height60"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin5"
        android:elevation="@dimen/elevation10"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/backLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="@dimen/imageWidth24"
                android:layout_height="@dimen/imageHeight24"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin5"
                android:fontFamily="@font/roboto_bold"
                android:text="Back"
                android:textSize="@dimen/headingTextSize"
                android:textColor="@color/colorPrimaryDark">
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin8"
            android:gravity="center"
            android:text="Edit Address"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/mainHeadingTextSize"
            android:fontFamily="@font/roboto_bold" />
    </RelativeLayout>

    <!-- ScrollView: This is the main scrollable area. -->
    <!-- layout_height="0sp" with top and bottom constraints makes it fill the remaining vertical space. -->
    <!-- fillViewport="true" ensures its child stretches to fill the ScrollView if the content is smaller. -->
    <ScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- LinearLayout inside ScrollView: This is the actual scrollable content. -->
        <!-- Its height is set to wrap_content so the ScrollView can determine when to scroll. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height120"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_banner"/>

            <!-- Company Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/companyNameInputLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height60"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin20"
                app:boxStrokeWidth="0sp"
                app:boxStrokeWidthFocused="0sp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:boxBackgroundMode="filled"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/companyNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_primary"
                    android:hint="Company name"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/baseTextSize"
                    android:padding="10sp"
                    android:textColorHint="@color/borderGrey"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address Line 1 Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address1InputLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height60"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                app:boxStrokeWidth="0sp"
                app:boxStrokeWidthFocused="0sp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:boxBackgroundMode="filled"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address1Input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_primary"
                    android:hint="Address line 1"
                    android:inputType="textPostalAddress"
                    android:textSize="@dimen/baseTextSize"
                    android:padding="10sp"
                    android:textColorHint="@color/borderGrey"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address Line 2 Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address2InputLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height60"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                app:boxStrokeWidth="0sp"
                app:boxStrokeWidthFocused="0sp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:boxBackgroundMode="filled"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address2Input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_primary"
                    android:hint="Address line 2"
                    android:inputType="textPostalAddress"
                    android:textSize="@dimen/baseTextSize"
                    android:padding="10sp"
                    android:textColorHint="@color/borderGrey"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- City Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cityInputLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height60"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                app:boxStrokeWidth="0sp"
                app:boxStrokeWidthFocused="0sp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:boxBackgroundMode="filled"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cityInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_primary"
                    android:hint="City"
                    android:inputType="textPostalAddress"
                    android:textSize="@dimen/baseTextSize"
                    android:padding="10sp"
                    android:textColorHint="@color/borderGrey"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Country Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/countryInputLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height60"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                app:boxStrokeWidth="0sp"
                app:boxStrokeWidthFocused="0sp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:boxBackgroundMode="filled"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/countryInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_primary"
                    android:hint="Country"
                    android:inputType="textPostalAddress"
                    android:textSize="@dimen/baseTextSize"
                    android:padding="10sp"
                    android:textColorHint="@color/borderGrey"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Postcode Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/postCodeInputLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height60"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                app:boxStrokeWidth="0sp"
                app:boxStrokeWidthFocused="0sp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:boxBackgroundMode="filled"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/postCodeInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_primary"
                    android:hint="Postcode"
                    android:inputType="textPostalAddress"
                    android:textSize="@dimen/baseTextSize"
                    android:padding="10sp"
                    android:textColorHint="@color/borderGrey"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Update Button Layout -->
            <LinearLayout
                android:id="@+id/saveLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height40"
                android:layout_marginTop="@dimen/margin20"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/border_solid_secondary">

                <ImageView
                    android:layout_width="@dimen/imageWidth20"
                    android:layout_height="@dimen/imageHeight20"
                    android:src="@drawable/ic_checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textSize="@dimen/buttonTextSize"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="@dimen/margin5"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Delete Button Layout -->
            <LinearLayout
                android:id="@+id/deleteLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height40"
                android:layout_marginTop="@dimen/margin20"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin20"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/border_solid_secondary">

                <ImageView
                    android:layout_width="@dimen/imageWidth20"
                    android:layout_height="@dimen/imageHeight20"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textSize="@dimen/buttonTextSize"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="@dimen/margin5"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>