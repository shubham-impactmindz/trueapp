<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".ui.component.main.cart.CheckOutActivity">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5sp"
        android:elevation="10sp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/backLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:fontFamily="@font/roboto_bold"
                android:text="Back"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_banner"/>

            <LinearLayout
                android:id="@+id/deliveryMethodLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Method"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold" />

                <RadioGroup
                    android:id="@+id/deliveryMethodRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_primary"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp">

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dispatchToLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispatch To"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_bold" />

                <RadioGroup
                    android:id="@+id/dispatchToRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_primary"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp">

                </RadioGroup>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/deliveryInstructionsInputLayout"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                app:boxStrokeWidth="0sp"
                app:boxStrokeWidthFocused="0sp"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:boxBackgroundMode="filled"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/deliveryInstructionsInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Additional Delivery Instructions..."
                    android:background="@drawable/border_primary"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:textColorHint="@color/tabUnselectedColor"
                    android:fontFamily="@font/roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:text="Order Summary"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="20sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_primary"
                android:gravity="start"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Order details"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Units"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvUnitNo"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="102"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp">
                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="SKUs"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvSkuNo"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="4"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/lightGrey">

                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Delivery"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Next Working Day Delivery"
                                android:textSize="13sp"
                                android:gravity="end"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Immyz Ltd, 78 Stockport Road, Ashton-under-Lyne, Greater Manchester, OL70LH"
                                android:textSize="13sp"
                                android:gravity="end"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/black"/>

                        </LinearLayout>



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/lightGrey">

                    </View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Summary"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Subtotal"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvTotal"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text= "@string/wallet_balance"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp">
                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Wallet Discount"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvWalletDiscount"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/wallet_balance"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10sp">
                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Coupon Discount"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvCouponDiscount"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/wallet_balance"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp">
                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Delivery"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvDelivery"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="FREE"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp">
                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="VAT (20%)"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvVat"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/wallet_balance"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp">
                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Payment Total"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tvTotalPayment"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/wallet_balance"
                                    android:textSize="13sp"
                                    android:gravity="end"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textColor="@color/black"/>

                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/couponInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:boxStrokeWidth="0sp"
                    app:boxStrokeWidthFocused="0sp"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:boxBackgroundMode="filled">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/couponInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter Coupon Code"
                        android:background="@drawable/border_primary"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:textColorHint="@color/tabUnselectedColor"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingEnd="60dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/applyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:text="APPLY"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorSecondary"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/textPayment"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Continue to Payment"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"
                android:background="@drawable/border_solid_secondary"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="20sp"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
