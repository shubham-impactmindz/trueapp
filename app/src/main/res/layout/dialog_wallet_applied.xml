<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:id="@+id/dialogContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_loading_overlay"
        android:padding="@dimen/padding16"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wallet Applied"
            android:textColor="@color/white"
            android:textSize="@dimen/mainHeadingTextSize"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"
            android:layout_marginBottom="@dimen/margin10" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your wallet balance of Â£5.0 has been applied to your order."
            android:textColor="@color/white"
            android:textSize="@dimen/baseTextSize"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:layout_marginBottom="@dimen/margin20" />

        <TextView
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height40"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/buttonTextSize"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:background="@drawable/bg_circle_grey_round"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

