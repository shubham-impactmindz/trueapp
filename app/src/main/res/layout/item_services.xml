<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_primary"
    android:gravity="start"
    android:padding="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="10sp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wall_display"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_spend"
        android:textSize="14sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:src="@drawable/display_solution"
        android:layout_marginTop="10sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pointsRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:nestedScrollingEnabled="false">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/border_primary">

    </androidx.appcompat.widget.AppCompatSpinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="@string/register_interest"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:background="@drawable/border_solid_secondary"
        android:layout_marginTop="10sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/products_not_included"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>
