<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External files directory (Android 10+ app-specific downloads) -->
    <external-files-path name="external_files" path="." />
    <!-- External files Downloads subdirectory -->
    <external-files-path name="downloads" path="Download" />
    <!-- External storage root (Android 9 and below public downloads) -->
    <external-path name="external_storage" path="." />
    <!-- External storage Downloads directory -->
    <external-path name="downloads_public" path="Download" />
    <!-- Internal files directory -->
    <files-path name="internal_files" path="." />
    <!-- Cache directory -->
    <cache-path name="cache" path="." />
</paths>

