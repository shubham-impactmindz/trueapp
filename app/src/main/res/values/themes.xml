<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">>

    <style name="Theme.TrueWebApp" parent="Theme.MaterialComponents.Light.NoActionBar" >

    <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    <item name="colorPrimary">@color/colorPrimaryDark</item>
    <item name="colorPrimaryVariant">@color/colorPrimary</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.TabLayout.TabText" parent="TextAppearance.AppCompat.Button">  <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.MySplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set Full-Screen Background Color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Splash Icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_red_blue</item>
        <item name="windowSplashScreenAnimationDuration">0</item>

        <!-- Hide icon background to match full screen color -->
        <item name="android:windowSplashScreenIconBackgroundColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
</resources>